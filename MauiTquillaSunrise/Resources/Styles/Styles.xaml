<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource EntryBackground}" />
        <Setter Property="TextColor" Value="{DynamicResource EntryText}" />
    </Style>
    <Style TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="{DynamicResource ImageButtonBackground}" />
        <Setter Property="Source" Value="{DynamicResource ImageButtonIcon}" />
    </Style>
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource LabelText}" />
    </Style>
    <Style TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{DynamicResource AppShellBackground}" />
        <Setter Property="ForegroundColor" Value="{DynamicResource AppShellText}" />
    </Style>
</ResourceDictionary>
